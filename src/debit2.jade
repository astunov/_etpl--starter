extends ./_layout

block vars
	-
		var UTM = 'from=mail_tin_debit'
		var tink = true;

//- PRODUCTION
block letter
	+table({"class": "c-card"})
		tr
			td.h1.h1--small(align="left")
				div Здравствуйте, <nobr>%%co_name%%&nbsp;%%co_secondname%%</nobr>!
		tr
			td.text: div(align="left")
				| У вас есть расчётная банковская карта <nobr>«Юлмарт–Тинькофф»</nobr>,
				| <br> с которой любая покупка в #[+a({"href": HOME}) Юлмарте] становится ещё выгоднее!
		tr
			td.c-card__hr
				+hr
		tr
			td.two-column(style="padding-right:0; padding-bottom: 10px;")
				| <!--[if (gte mso 9)|(IE)]><table width="100%"><tr><td width="50%" valign="top"><![endif]-->
				.column.is-vertical.is-alter
					+table({"class":"content"})
						tr
							td.c-card__thumb-title.is-accent-alter.inner().
								Используйте
								<br> преимущества
								<br> вашей карты!
				| <!--[if (gte mso 9)|(IE)]></td><td width="50%" valign="top"><![endif]-->
				.column.is-vertical.is-alter
					+table({"class":"content"})
						tr
							td.inner(align="center")
								img(src="#{URL + 'card.png'}" width="276" height="189" alt="")

				| <!--[if (gte mso 9)|(IE)]></td></tr></table><![endif]-->

		tr
			td(style="padding-top:10px;")
				- var debitList = ['Cashback 2% за покупки в Юлмарте и до 1,5% за остальные покупки;', 'Доходность на остаток по счёту — до 7%;', '300 бонусов в подарок при активации карты;', 'Бесплатное снятие наличных на сумму от 3 000 руб. в любых банкоматах;', 'Лучшее мобильное приложение и интернет-банк*.']
				+list(debitList)

	+table({"class": "c-advantage"})
		tr
			td(style="padding-top: 20px;")
				+table
					tr
						td(align="center").h1: div
							span.is-accent Компенсируйте бонусами
							| <br> покупки в Юлмарте
					tr
						td.c-advantage__desc: div 1 бонус = 1 рубль
		tr
			td()
				+pluses(advantages)
		tr
			td(align="center" style="padding-bottom: 25px;")
				+btn({
					"link": HOME,
					"title": "За покупками — в Юлмарт!",
					"width": "273"
				})
