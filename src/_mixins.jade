//- @param {Array:Object} data of items
mixin catsRow(data)
	-
		var tdWidth = 100 / data.length
	each item in data
		- tdPadding = (item.pin) ? '10' : '40'
		td.c-cats__item(width="#{tdWidth + '%'}" align="center" valign="top" height="143" style="padding-top: #{tdPadding + 'px'}")
			+a({"href": item.link + UTM})
				+table({"align": "center", "class":"c-cat-item"})
					if item.pin
						tr
							td(align="right" height="30").c-cat-item__pin !{item.pin}
					tr
						td.c-cat-item__thumb(align="center" valign="middle")
							img(src="#{URL + item.icon}" alt="" width="#{item.width || auto}")
					tr
						td.c-cat-item__title(align="center" )
							!{item.title}

mixin cats
	+table({"class": "c-cats"})
		tr
			+catsRow(cats.slice(0,5))
		tr
			+catsRow(cats.slice(5))
	+table
		tr
			td(style="padding-top: 18px;")
				+table
					tr
						td(align="center").h1: div
							span.is-accent Юлмарт выбирают
							| <br> более 1 600 000 покупателей
					tr
						td(align="center" style="padding-top:10px; padding-bottom: 25px;")
							+btn({
								"link": HOME + UTM,
								"title": "Присоединяйтесь!",
								"width": "205"
							})


//- @param {Array:String} data list of items
mixin list(data)
	+table({"class":"list"})
		each item, count in data
			tr
				td.list__item
					+table
						tr
							td.list__counter(width="14"): div: img(src="#{URL + 'check.png'}" width="14" height="11" alt="#{count + 1}")
							td.list__desc(align="left"): div !{item}

//- @param {Array:Object} data of items
mixin pluses(data)
	+table
		tr
			each item in data
				td(width="200" valign="top")
					+table({"class": "c-plus-item"})
						tr
							td(align="center").c-plus-item__thumb: img(src="#{URL + item.icon}" alt="" width="92" height="92")
						tr
							td(align="center").c-plus-item__title: div !{item.title}
						tr
							td(align="center").c-plus-item__desc: div !{item.desc}
//- ELEMENTS

mixin table(attr)
	-
		attr = attr || {}
		attr.width = attr.width || '100%'
	table(cellpadding="0" cellspacing="0" border="0")&attributes(attr)
		block

mixin a(attr)
	- attr = attr || {}
	a(target="_blank")&attributes(attr)
		block

mixin btn(attr)
	+a({"href": attr.link})
		+table({"class":"btn btn--primary", "width": attr.width || '100%'})
			tr
				td(height="50"): div !{attr.title}

mixin hr
	+table({"class": "hr"})
		tr
			td: div &nbsp;
